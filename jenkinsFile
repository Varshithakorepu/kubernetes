pipeline {
    agent any
    tools {
        jdk 'JDK21'  // Make sure JDK is configured in Jenkins
    }

    environment {
        DOCKERHUB_USER = 'varshitha1105'
        IMAGE = 'demo-maven'
        TAG = 'v1'
        DOCKER_CREDENTIALS_ID = 'dockerhub'  // Jenkins credentials ID for Docker Hub
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${DOCKERHUB_USER}/${IMAGE}:${TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    bat 'echo %PASS% | docker login -u %USER% --password-stdin'
                    bat "docker push ${DOCKERHUB_USER}/${IMAGE}:${TAG}"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f deployment.yaml'
                bat 'kubectl apply -f service.yaml'
            }
        }

        stage('Check Pod Logs') {
            steps {
                // Use the correct label from your deployment.yaml
                bat 'FOR /F "tokens=*" %i IN (\'kubectl get pods -l app=demo-maven -o jsonpath="{.items[0].metadata.name}"\') DO kubectl logs %i'
            }
        }
    }
}
