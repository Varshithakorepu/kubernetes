pipeline {
    agent any
    tools{
        jdl 'JDK21'
    }

    environment {
        DOCKERHUB_USER = 'varshitha1105'
        IMAGE = 'demo-maven'
        TAG = 'v1'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %DOCKERHUB_USER%/%IMAGE%:%TAG% .'
            }
        }

        stage('Push Docker Image') {
            steps {
                bat 'docker login -u %DOCKERHUB_USER% -p yourpassword'
                bat 'docker push %DOCKERHUB_USER%/%IMAGE%:%TAG%'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f deployment.yaml'
                bat 'kubectl apply -f service.yaml'
            }
        }

        stage('Check Pod Logs') {
            steps {
                bat 'kubectl logs -l app=hello-java --tail=20'
            }
        }
    }
}
